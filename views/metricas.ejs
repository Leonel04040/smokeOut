    <script type="module">
        import "https://cdn.plot.ly/plotly-2.16.2.min.js"
        document.body.onload = function(){
            let fechas = document.querySelector("#fecha").value
            let cigs = document.querySelector("#cigarros").value
            console.log(cigs)
            let cigsArreglo = cigs.split(',')
            console.log(cigsArreglo)
            let fechasArreglo = fechas.split(',')
            if(cigsArreglo.length != 1)
            {
                Plotly.newPlot("grafico", [{ x: fechasArreglo, y: cigsArreglo }])
            }else
            {
                document.getElementById('grafico').innerHTML = '<p>No tienes ningún progreso</p>'
            }
        }
    </script>

    <script type="text/javascript">
