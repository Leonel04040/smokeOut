        <div class="contenedor">

            <%if(nombreMetodo != "vacío"){%>

                <div class="form-register" style="text-align: left;">
                    <h1 class="modal-title fs-5" align="center" id="exampleModalLabel" style="text-align:center";><strong><%=nombreMetodo%></strong></h1><br><br>
                    
                        <%=infoMetodo%>
                    
                </div>
            
            <%}else{%>

                <div class="modal-dialog" style="text-align: left;">
                    <div class="modal-content">
                        <form class="form-register" id="objetivos" action="/registrarObjetivo" method="post">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" style="text-align: center;" id="exampleModalLabel"><strong>Nuevo Objetivo</strong> </h1>
                            </div>
                            <div class="modal-body">
                                <div class="input-div">
                                    <br for="etiquetaob"><label>Agrega una etiqueta a tu objetivo:</label><br>
                                    <input type="text" name="etiquetaob" placeholder="Descripción del objetivo" class="form-control">
                                    <br for="cpropuestos"><label>Número de cigarros propuestos:</label><br>
                                    <input type="number" name="cpropuestos" placeholder="" class="form-control"><br>
                                    <label for="FPlaneada">Fecha Planeada de Realización:</label><br>
                                    <input type="date" name="FPlaneada" class="form-control" min="<%=fecha%>"><br>
                                    <label for="metodosp">Selecciona un método:</label>
                                    <select name="metodosp" id="pmetodos" class="form-control">
                                        <option value="1" class="form-control">"Masticar algo"</option>
                                        <option value="2" class="form-control">"Evitar factores desencadenantes"</option>
                                        <option value="3" class="form-control">Técnicas de relajación</option>
                                        <option value="4" class="form-control">Realiza actividad física</option>
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="modal-footer">
                                <button type="submit" class="orange-500" onclick="validarObjetivos(event)">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>  
            <%}%>
        </div>

        <div>
            <div style="text-align: center;">
                <div class="form-register" style="text-align: left; word-break: break-all;">
                    <h1 class="modal-title fs-5" align="center" id="exampleModalLabel" style="text-align:center";><strong>Lista de objetivos</strong> </h1><br><br>
                        
                        <%if(texto2 == "sinObj"){%>
                            <h2 style="color: black;">Parece ser que no has concluido ningún objetivo por el momento</h2>
                        <%}else{%>
                            <%for(let i=0; i < listaObjetivos.length; i++){%>
                                <strong>Objetivo:</strong> <%=listaObjetivos[i].etiqueta %> <br>
                                
                                <strong>Método:</strong> <%if(listaObjetivos[i].metodo_idmetodo == 1){%>"Masticar algo"<%}%>
                                <%if(listaObjetivos[i].metodo_idmetodo == 2){%>"Evitar factores desencadenantes"<%}%>
                                <%if(listaObjetivos[i].metodo_idmetodo == 3){%>Técnicas de relajación<%}%> 
                                <%if(listaObjetivos[i].metodo_idmetodo == 4){%>Realiza actividad física<%}%><br>

                                <strong>Status:</strong> <%if(listaObjetivos[i].status_idstatus == 1){%>Pendiente<%}%>
                                <%if(listaObjetivos[i].status_idstatus == 2){%>Logrado<%}%>
                                <%if(listaObjetivos[i].status_idstatus == 3){%>Fallado<%}%> <br><br>
                            <%}%>
                        <%}%>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="listaobjetivos" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-labelledby="exampleModalLabel" aria-hidden="true">
        
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <button type="button" class="orange-500" data-bs-dismiss="modal" aria-label="Close"></button>
                <h1 class="modal-title fs-5" id="exampleModalLabel">Lista Objetivos</h1>
                </div>
                <div class="modal-body">
                    <div class="input-div">
                        <ul>
                            <li>Objetivo 1</li>
                        </ul>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="orange-500" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="orange-500" >Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>




